<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>zh</supported-locale>
            <supported-locale>zh_TW</supported-locale>
            <supported-locale>zh_CN</supported-locale>
            <supported-locale>en_US</supported-locale>
            <supported-locale>tr_TR</supported-locale>
        </locale-config>
        <resource-bundle>
            <description>config resource bundle</description>
            <base-name>messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <resource-handler>com.tcci.fc.util.CustomResourceHandler</resource-handler>
    </application>
    
    <lifecycle>
        <phase-listener>com.tcci.fc.util.UACompatibleHeaderPhaseListener</phase-listener>
    </lifecycle>        
</faces-config>
