        text-align: center;
        vertical-align: middle;
        height: 24px;
    }

    .detailTB td {
        border: 1px thin #8e846b;
        background-color:#e1e1e1;
        min-width: 60px;
        max-width: 260px;
    }

    p.wordBreak {
        word-wrap: break-word;
