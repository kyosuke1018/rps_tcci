        display: block;
        color: #FFFFFF;
        text-decoration:none;
    }

    #periodical a p
    {
        color: #FFFFFF;
        background-color: #7f4142;
        padding: 2px 3px 3px 3px;
        margin-top: 0px;
        margin-bottom: 8px;
    }

    #periodical a h6
    {
        color: #FFFFFF;
        background-color: #7f4142;
        margin: 0;
        padding: 3px 3px 2px 3px;
        border-bottom: 1px solid #FFF;
        font-size:12px;
    }

    #periodical a:hover
    {
        background-color: #9e5253;
    }

    #periodical a:hover p
    {
        background-color: #9e5253;
    }

    #periodical a:hover h6
    {
        background-color: #9e5253;
    }
