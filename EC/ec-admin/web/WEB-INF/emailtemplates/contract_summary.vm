  <style type="text/css">
    body{
        font-size:12px;
        font-family: 微軟正黑體, 新細明體, simhei, sans-serif, Arial;
    }
    .detailTB {
        cellpadding: 2px;
        cellspacing: 1px;
        border: 1px;
        empty-cells:show;
        min-width:700px;
    }

    .detailTB th {
        border: 1px solid #a1a1a1;
        background-color:#78828B;
        color: #FFFFFF;
        text-align: center;
        vertical-align: middle;
        height: 24px;
    }

    .detailTB td {
        border: 1px thin #8e846b;
        background-color:#f1f1f1;
        min-width: 60px;
        max-width: 260px;
    }

    p.wordBreak {
        word-wrap: break-word;
        white-space: pre-wrap;
        margin: 1px;
        padding: 1px;
    }

    #periodical
    {
        width: 40px;
        padding: 8px;
        background-color: #bb797b;
        font-family:Verdana, Arial, Helvetica, sans-serif;
        font-size:12px;
    }

    #periodical a, #periodical a:visited
    {
        display: block;
        color: #FFFFFF;
        text-decoration:none;
    }

    #periodical a p
    {
        color: #FFFFFF;
        background-color: #7f4142;
        padding: 2px 3px 3px 3px;
        margin-top: 0px;
        margin-bottom: 8px;
    }

    #periodical a h6
    {
        color: #FFFFFF;
        background-color: #7f4142;
        margin: 0;
        padding: 3px 3px 2px 3px;
        border-bottom: 1px solid #FFF;
        font-size:12px;
    }

    #periodical a:hover
    {
        background-color: #9e5253;
    }

    #periodical a:hover p
    {
        background-color: #9e5253;
    }

    #periodical a:hover h6
    {
        background-color: #9e5253;
    }
  </style>
