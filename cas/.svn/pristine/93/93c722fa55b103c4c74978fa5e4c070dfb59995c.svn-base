<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html">
    <h:head>
        <title>Demo JavaEE 8 Security 1.0 API</title>
    </h:head>
    <h:body>
        <h:form id="fmMain" >
            login user = #{home.user}<br/>
            user in [ROLE_USER] group = #{home.hasUserRole}<br/>
            user in [ROLE_ADMIN] group = #{home.hasAdminRole}<br/>

            <br/>
            <h:inputText value="#{home.val1}" ></h:inputText>
            <h:commandButton action="#{home.save()}" value="submit" ></h:commandButton><br/>
            <br/>
            <h:inputText value="#{home.simulateUser}" ></h:inputText>
            <h:commandButton action="#{home.doSimulateUser()}" value="Simulate User" type="submit" ></h:commandButton><br/>
        </h:form>
        
        <br/><br/>
        <a href="#{request.contextPath}/logout" >Logout</a>
    </h:body>
</html>

