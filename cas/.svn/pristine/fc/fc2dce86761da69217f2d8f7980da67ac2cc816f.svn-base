#replace DRF with K to use console output
log4j.rootLogger=ALL, DRF
#log4j.rootLogger=WARN, K

log4j.logger.com.tcci.cs=WARN

log4j.appender.K=org.apache.log4j.ConsoleAppender
log4j.appender.K.layout=org.apache.log4j.PatternLayout
log4j.appender.K.layout.ConversionPattern= %d %-5p [%t][%X{sessionId}][%X{user}] %c{2} - %m%n

log4j.appender.DRF = org.apache.log4j.DailyRollingFileAppender
log4j.appender.DRF.File = logs/app.log
log4j.appender.DRF.Append = true
log4j.appender.DRF.DatePattern = '.'yyyy-MM-dd
log4j.appender.DRF.layout = org.apache.log4j.PatternLayout
log4j.appender.DRF.layout.ConversionPattern = %d %-5p [%t][%X{sessionId}][%X{user}] %c{2} - %m%n

