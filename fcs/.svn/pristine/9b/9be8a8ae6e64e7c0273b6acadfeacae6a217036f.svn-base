            <f:selectItems value="#{queryReconcilingController.companyOptions}" />
            <p:ajax oncomplete="doChangeAccountType()"/>
        </p:selectOneMenu>
        <p:remoteCommand name="doChangeAccountType"
                         actionListener="#{queryReconcilingController.changeAccountType()}"
                         update=":editReconcilingDForm:editDetailDlgGroup"/>
