    <h:outputLabel value="是否調節:"/>
    <h:panelGroup id="pgRemarkOnly">
        <h:selectOneRadio value="#{queryReconcilingController.editDetail.remarkOnly}">
            <f:selectItem itemLabel="調節" itemValue="#{false}"/>
            <f:selectItem itemLabel="不調節" itemValue="#{true}"/>
            <p:ajax oncomplete="doChangeRemarkOnly()"/>
        </h:selectOneRadio>
        <p:remoteCommand name="doChangeRemarkOnly"
                         actionListener="#{queryReconcilingController.changeARemarkOnly()}"
                         update=":editReconcilingDForm:editDetailDlgGroup"/>
    </h:panelGroup>
    <h:outputLabel class="required" value="#{msgApp['irs.msg.txt36']}:" />
