<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                template="/templates/generalPageTemplate.xhtml">
    <ui:define name="title">#{msgApp['acc.msg.pageTitle']}</ui:define>
    <ui:define name="head">
        <style type="text/css">
            .ui-fieldset-content {
                margin-top: -10px;
            }
        </style>
    </ui:define>
    <ui:define name="content">
        <p:panel header="#{msgApp['acc.msg.pageTitle']}">
            <h:form id="form" prependId="false">
                <p:selectOneMenu id="somGroup" value="#{accountsController.group}">
                    <f:selectItem itemValue="A" itemLabel="台泥"/>
                    <f:selectItem itemValue="B" itemLabel="中橡"/>
                    <p:ajax oncomplete="doChangeGroup()" />
                </p:selectOneMenu>
                <p:remoteCommand name="doChangeGroup"
                             actionListener="#{accountsController.changeGroup()}"
                             update="voList"/>
                
                <p:dataTable id="voList"
                                 value="#{accountsController.accMasterList}"
                                 var="row"
                                 rows="10"
                                 paginator="true">
                    <p:column headerText="ID" width="20">
                        <h:outputText value="#{row.id}"/>
                    </p:column>
                    <p:column headerText="DETAIL" width="50"
                              filterBy="#{row.zaadet}" filterMaxLength="6" filterStyle="width:60px;">
                        <h:outputText value="#{row.zaadet}"/>
                    </p:column>
                    <p:column headerText="DETAIL NAME" width="100">
                        <h:outputText value="#{row.zaadetNm}"/>
                    </p:column>
                    <p:column headerText="NOTE LINE" width="30"
                              filterBy="#{row.zabnot}" filterMaxLength="4" filterStyle="width:50px;">
                        <h:outputText value="#{row.zabnot}"/>
                    </p:column>
                    <p:column headerText="NOTE LINE NAME" width="100">
                        <h:outputText value="#{row.zabnotNm}"/>
                    </p:column>
                    <p:column headerText="LINE" width="30"
                              filterBy="#{row.zaclin}" filterMaxLength="4" filterStyle="width:50px;">
                        <h:outputText value="#{row.zaclin}"/>
                    </p:column>
                    <p:column headerText="LINE NAME" width="100">
                        <h:outputText value="#{row.zaclinNm}"/>
                    </p:column>
                    <p:column headerText="SUBCLASS" width="30"
                              filterBy="#{row.zadsub}" filterMaxLength="4" filterStyle="width:50px;">
                        <h:outputText value="#{row.zadsub}"/>
                    </p:column>
                    <p:column headerText="SUBCLASS NAME" width="100">
                        <h:outputText value="#{row.zadsubNm}"/>
                    </p:column>
                    <p:column headerText="CLASS" width="30"
                              filterBy="#{row.zaecls}" filterMaxLength="4" filterStyle="width:50px;">
                        <h:outputText value="#{row.zaecls}"/>
                    </p:column>
                    <p:column headerText="CLASS NAME" width="100">
                        <h:outputText value="#{row.zaeclsNm}"/>
                    </p:column>
                </p:dataTable>
            </h:form>
        </p:panel>
    </ui:define>
</ui:composition>