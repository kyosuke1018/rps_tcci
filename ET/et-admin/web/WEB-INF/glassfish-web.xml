<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">
<glassfish-web-app error-url="" ><!-- httpservlet-security-provider="SAM_CSRCWEB" -->
  <class-loader delegate="true"/>
  <jsp-config>
    <property name="keepgenerated" value="true">
      <description>Keep a copy of the generated servlet class' java code.</description>
    </property>
  </jsp-config>
  <locale-charset-info default-locale="zh">
    <locale-charset-map charset="" locale=""/>
    <parameter-encoding default-charset="UTF-8"/>
  </locale-charset-info>
  <security-role-mapping>
    <role-name>valid-users</role-name>
    <group-name>Authenticated</group-name>
  </security-role-mapping>
  <security-role-mapping>
    <role-name>ADMINISTRATORS</role-name>
    <group-name>ADMINISTRATORS</group-name>
  </security-role-mapping>
  <!-- 可執行 RESTful 的 USER GROUP -->
  <security-role-mapping>
    <role-name>REST_USER</role-name>
    <group-name>REST_USER</group-name>
  </security-role-mapping>
  <!-- 使用者 -->
  <security-role-mapping>
    <role-name>AP_USER</role-name>
    <group-name>AP_USER</group-name>
  </security-role-mapping>
</glassfish-web-app>
