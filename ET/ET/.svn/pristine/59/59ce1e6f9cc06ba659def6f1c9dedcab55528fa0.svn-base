.cover {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0px;
    z-index: -1;
    background: url(../img/cover_login.jpg) center 20% no-repeat;
    background-size: cover;
}

.form {
    width: 500px;
    height: 270px;
    margin: auto;
    padding: 30px 40px;
    box-sizing: border-box;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.75);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.form .loginBlock {
    width: 75%;
    height: 100%;
    padding: 0 40px 0 0;
    box-sizing: border-box;
    float: left;
}

.form .loginBlock .caption {
    margin: 0 0 10px;
    font-weight: bold;
    font-size: 28px;
    color: #808080;
}

.form .loginBlock .btn {
    width: 80px;
    margin: 20px auto 0;
    padding: 7px 10px;
    box-sizing: border-box;
    border-radius: 2px;
    text-align: center;
    color: #fff;
    background: #b00000;
    cursor: pointer;
}

.form .optionBlock {
    width: 25%;
    height: 100%;
    margin: 0;
    padding: 60px 0 40px 40px;
    box-sizing: border-box;
    float: left;
    border-left: dotted 1px #c0c0c0;    
}

.form .optionBlock .option {
    padding: 10px 0;
    text-align: center;
    font-size: 14px;
}

.form .optionBlock .option a {
    color: #b00000;
}

