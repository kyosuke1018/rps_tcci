<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                >
    <!-- 關聯影片選取對話框 -->
    <h:form id="videoSelEditForm" prependId="false" >
        <p:dialog header="關聯影片選取對話框" id="videoSelEditDlg" widgetVar="vwVideoSelEditDlg" 
                  modal="true" draggable="true" resizable="true" showEffect="clip" hideEffect="clip" 
                  onShow="hideBodyScrollY();"
                  onHide="doResize('dtResult'); showBodyScrollY();" 
                  closeOnEscape="true" >
            <p:fieldset legend="勾選影片" toggleable="true" style="max-height:360px;overflow-y: scroll;"  >
                <p:selectManyCheckbox value="#{publication.selectedVideos}" layout="grid" columns="1" >
                    <f:selectItems value="#{publication.videoOps}" />
                </p:selectManyCheckbox>
            </p:fieldset>
     
            <p:separator />
            
            <p:panelGrid columns="1" styleClass="pgDlgActionBtns" >
                <h:panelGroup id="pgVideoSelEditSubmit" >
                    <p:commandButton id="cbVideoSelEditSave" value="確定"
                                     actionListener="#{publication.setSelVideos()}" 
                                     update=":fmMain" 
                                     oncomplete="saveVideoSelEditDlg(xhr, status, args);" 
                                     icon="ui-icon-disk" ></p:commandButton><!-- update all form -->
                    <p:spacer width="5" />
                    <p:commandButton id="cbVideoSelEditClose" value="取消" immediate="true" 
                                     onclick="closeVideoSelEditDlg();" 
                                     icon="ui-icon-circle-close" ></p:commandButton>
                </h:panelGroup>
            </p:panelGrid>
        </p:dialog>
    </h:form>

    <script type="text/javascript">
    //<![CDATA[
    function openVideoSelEditDlg(xhr, status, args){
        if( afterCallBackHandler(xhr, status, args) ){
            showVideoSelEditDlg();
        }
    }
    function saveVideoSelEditDlg(xhr, status, args){
        if( afterCallBackHandler(xhr, status, args) ){
            closeVideoSelEditDlg();
        }
    }
    
    function showVideoSelEditDlg(){
        PF('vwVideoSelEditDlg').show();
    }
    function closeVideoSelEditDlg(){
        PF('vwVideoSelEditDlg').hide();
    }
    //]]>
    </script>
</ui:composition>
