    margin-right: 2px;
    margin-left: 2px;
} 

img.iconsBig {
    width: 24px;
    height: 24px;
    vertical-align: middle; 
    border-style: none;
    margin-right: 1px;
    margin-left: 1px;
} 

img.iconsHelp {
    width: 24px;
    height: 24px;
    vertical-align: middle; 
    border-style: none;
    margin-right: 1px;
    margin-left: 1px;
    cursor: help;  
} 

