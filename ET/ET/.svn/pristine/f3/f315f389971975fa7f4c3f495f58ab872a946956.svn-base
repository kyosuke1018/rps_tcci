div.animation
{
width:460px;
height:100px;
/*background:red;*/
text-shadow: 10px;
font-size: 20px;
color: #020220;
position:relative;
animation:mymove 5s infinite;
-webkit-animation:mymove 5s infinite; /*Safari and Chrome*/
}

@keyframes mymove
{
from {left:50px;top:0px;}
to {left:250px;top:100px;}
}

@-webkit-keyframes mymove /*Safari and Chrome*/
{
from {left:50px;top:0px;}
to {left:250px;top:100px;}
}

