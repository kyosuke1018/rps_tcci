.wordBreak {
    word-wrap: break-word;
    white-space: pre-wrap;
}

p.wordBreak {
    word-wrap: break-word;
    white-space: pre-wrap;
    margin: 0;
    padding: 0;
}

/* 自動換行 */
div.breakWord { 
    word-wrap: break-word; 
    word-break: normal; 
}
/* 強制不換行 */ 
div.noBreak{ 
    white-space:nowrap; 
}
/* 強制英文單詞斷行 */ 
div.breakAll {
    word-break:break-all;
}

