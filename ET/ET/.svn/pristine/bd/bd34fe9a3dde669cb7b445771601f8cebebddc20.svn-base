                >
    <!-- Document View & Edit Dialog -->
    <h:form id="editForm" >
        <!-- 跳出視窗 : 編輯視窗 -->
        <p:dialog header="編輯視窗" id="dlgEdit" widgetVar="wvDlgEdit" resizable="true"
                  modal="true" draggable="true" showEffect="clip" hideEffect="clip" >
            <p:fieldset >
                <p:panelGrid columns="2" columnClasses="pgCol1,pgCol2" >
                    <p:panelGrid columns="1" >
                        <p:panelGrid columns="3" >
<!--                            <p:outputLabel value="權限：" for="itAccount" />
                            <h:panelGroup >
                                <p:selectCheckboxMenu label="選取系統角色" id="smmGroups" value="#{usersController.selectedGroups}" 
                                                      filter="true" filterMatchMode="contains" panelStyle="width:480px" scrollHeight="400">
                                    <f:selectItems value="#{usersController.tcGroupList}" var="item"   
                                                   itemLabel="#{item.code}-#{item.name}" itemValue="#{item.id.toString()}" />
                                    <p:ajax event="change" update=":editForm:pgSelectedGroups" />
                                    <p:ajax event="toggleSelect" update=":editForm:pgSelectedGroups" />
                                </p:selectCheckboxMenu>
                            </h:panelGroup>
                            <p:spacer width="2" />-->
                            
                            <p:outputLabel value="帳號：" for="itAccount" />
                            <p:inputText id="itAccount" value="#{memberController.editVO.loginAccount}" maxlength="30" size="15" 
                                         required="true" requiredMessage="帳號必填" />
                            <p:watermark value="請輸入帳號" for="itAccount" />
  
                            <p:outputLabel value="姓名：" for="itName" />
                            <p:inputText id="itName" value="#{memberController.editVO.name}" maxlength="32" size="15" 
                                         required="true" requiredMessage="姓名必填" />
                            <p:watermark value="請輸入姓名" for="itName" />

                            <p:outputLabel value="電話：" for="itPhone" />
                            <p:inputText id="itPhone" value="#{memberController.editVO.phone}" maxlength="10" size="15" />
                            <p:watermark value="請輸入電話" for="itPhone" />
                            
<!--                            <p:outputLabel value="申請供應商編號：" />
                            <p:outputLabel value="#{memberController.editVO.applyVenderCode}" />
                            <p:spacer width="1"/>
                            <p:outputLabel value="申請供應商名稱：" />
                            <p:outputLabel value="#{memberController.editVO.applyVenderName}" />
                            <p:spacer width="1"/>-->

                            <p:selectBooleanCheckbox value="#{memberController.editVO.active}" itemLabel="有效" /><!-- 有效 --> 
                            <p:spacer width="1"/><p:spacer width="1"/>

                        </p:panelGrid>
<!--                        <h:panelGroup id="pgApplyInfo">
                            <p:panelGrid columns="2" >
                                <p:outputLabel value="申請供應商編號：" />
                                <p:outputLabel value="#{memberController.editVO.applyVenderCode}" />
                                <p:outputLabel value="申請供應商名稱：" />
                                <p:outputLabel value="#{memberController.editVO.applyVenderName}" />
                            </p:panelGrid>
                        </h:panelGroup>-->
                    </p:panelGrid>
                    
                    <h:panelGroup id="pgSelectedGroups" >
                        <p:panelGrid columns="1" >
                            <h:panelGroup >
                                <p:outputLabel value="選取供應商：" styleClass="fieldname" />
                                <p:autoComplete size="30" value="#{memberController.selectedVenderTxt}" required="true" requiredMessage="您未選取供應商!"
                                                completeMethod="#{memberController.autoCompleteVenderOptions}" 
                                                onkeypress="ajaxStatusShow=false" onblur="ajaxStatusShow=true" 
                                                dropdown="true" scrollHeight="240" 
                                                >
                                </p:autoComplete>
                                    
                                <p:commandButton id="cbAddVender" value="新增" 
                                                 actionListener="#{memberController.addVender()}"  
                                                 update="pgSelectedGroups" 
                                                 icon="ui-icon-circle-check" 
                                                 ></p:commandButton>
                            </h:panelGroup>
                                
                                
                            <h:panelGroup >    
                                <h:outputText value="已選取供應商(" />
                                <h:outputText value="#{memberController.editVO.venders.size()}" />
                                <h:outputText value=")：" />
                                <br/>
                            </h:panelGroup>
                            <p:scrollPanel id="spVender" style="width:350px;height:300px" mode="native" >
                                <ui:repeat value="#{memberController.editVO.venders}" var="item" >
                                    <!--                                <h:graphicImage library="images" name="1rightarrow.png" styleClass="icons" />
                                                                    <h:outputText value="#{item.value}-#{item.label}" /><br/>-->
                                    <h:outputText value="#{item.label}" />
                                    <p:commandLink actionListener="#{memberController.removeVender(item)}"
                                                   immediate="true"
                                                   update=":editForm:spVender">
<!--                                    <p:commandLink actionListener="#{memberController.removeVender(item)}"
                                                   immediate="true">-->
                                        <h:graphicImage title="移除"
                                                        library="images" 
                                                        name="delete.png"
                                                        style="border-style: none;"/>
                                    </p:commandLink>
                                    <br/>
                                </ui:repeat>
                            </p:scrollPanel>
                        </p:panelGrid>
                    </h:panelGroup>
                        
<!--                    <h:panelGroup id="pgSelectedGroups" >
                        <h:outputText value="已選取角色群組：" /><br/>
                        <p:scrollPanel style="width:350px;height:300px" mode="native" >
                            <ui:repeat value="#{usersController.selectedGroupList}" var="item" >
                                <h:graphicImage library="images" name="1rightarrow.png" styleClass="icons" />
                                <h:outputText value="#{item.code}-#{item.name}" /><br/>
                            </ui:repeat>
                        </p:scrollPanel>
                    </h:panelGroup>-->

                        
                </p:panelGrid>
                <p:separator /> 
                    
            </p:fieldset>　 
            <p:separator />
                
            <p:panelGrid columns="1" style="width:100%; text-align: center" >
                <h:panelGroup style="text-align: left" >
                    <p:messages id="messagesSave" showDetail="false" autoUpdate="true" />
                </h:panelGroup>
                <h:panelGroup id="pgEditSubmit" style="width:100%; text-align: center" >
                    <p:commandButton id="cbSave"
                                     icon="ui-icon-disk"
                                     value="儲存"
                                     actionListener="#{memberController.save()}" 
                                     update=":fmMain"
                                     oncomplete="handleAfterSave(xhr, status, args);" />
                    <p:spacer width="10" />
                    <p:commandButton id="cbClose" value="關閉" onclick="closeEditDlg();" 
                                     icon="ui-icon-circle-close"
                                     immediate="true" />
                </h:panelGroup>
            </p:panelGrid>
                
        </p:dialog>
    </h:form>
        
    <script type="text/javascript">
        //<![CDATA[
        function openEditDlg(){
            PF('wvDlgEdit').show();
        }
        function closeEditDlg(){
            PF('wvDlgEdit').hide();
        }
        function handleAfterSave(xhr, status, args) {
            //function handleAfterSave() {    
            if( handleCallBack(xhr, status, args) ){
                PF('wvDlgEdit').hide();
            }
        }
        //]]>
    </script>
</ui:composition>