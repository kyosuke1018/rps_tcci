<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                >
    <!-- BEGIN: I 文章插圖 -->
    <p:fieldset legend="查詢條件" toggleable="true" rendered="#{controller.showIllustration()}" >
        <p:panelGrid columns="2" >
            <p:outputLabel value="類型：" />
            <h:panelGroup >
                <p:selectOneMenu value="#{controller.criteriaVO.docCriteriaVO.type}" 
                                 disabled="#{!empty controller.editVO.type}"  >
                    <f:selectItem itemLabel="===" noSelectionOption="true" />
                    <f:selectItems value="#{ui.publicationOptions}" />
                </p:selectOneMenu>
                <p:spacer width="10" height="5" />
                <p:outputLabel value="關鍵字：" />
                <p:inputText id="itKeywordI" value="#{controller.criteriaVO.docCriteriaVO.keyword}" size="30" />
                <p:watermark for="itKeywordI" value="標題、大綱" />
                                        
                <p:spacer width="5" height="5" ></p:spacer>
                <p:commandButton value="查詢" actionListener="#{controller.doQueryDoc()}" ></p:commandButton>
                <p:spacer width="5" height="5" ></p:spacer>
                <p:commandButton value="清除" actionListener="#{controller.doResetDoc()}"></p:commandButton>
            </h:panelGroup>
        </p:panelGrid>
    </p:fieldset>    
    <!-- END: I 文章插圖 -->
                            
</ui:composition>