<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                template="/templates/generalPageTemplate.xhtml"
                >

    <ui:define name="title">
        <h:outputText value="#{rfqPrintController.funcTitle}" />
    </ui:define>
    <ui:define name="head"> 
    </ui:define>
    <ui:define name="content">
        <ui:include src="/inc/inc_globalMessage.xhtml"></ui:include>
        <h:form id="fmMain" prependId="false" >

            <p:panel header="#{rfqPrintController.funcTitle}" style="overflow-x: scroll;"  >
                <h:panelGroup>
                    <p:fieldset legend="#{msg['search.critical']}" toggleable="true" collapsed="false" >
                        <!-- 查詢 -->
                        <p:commandButton icon="ui-icon-search" value="#{msg['button.search']}"
                                         title="#{msg['button.search']}"
                                         actionListener="#{rfqPrintController.doQuery()}" 
                                         oncomplete="doResize('dtResult');"
                                         update="fsResult"/>
                        <p:spacer width="5px"/> 

                        <!--清除按鈕-->
                        <p:commandButton value="#{msg['common.button.clear']}"
                                         icon="ui-icon ui-icon-cancel"  
                                         title="#{msg['common.button.clear']}"
                                         actionListener="#{rfqPrintController.doReset()}"
                                         oncomplete="doResize('dtResult');" 
                                         update="fsResult"/>
                    </p:fieldset>
                    <p:fieldset id="fsResult" legend="#{msg['search.result']}">

                        <p:dataTable id="dtResult" var="row"  
                                     value="#{rfqPrintController.lazyModel}" lazy="true"
                                     widgetVar="wvDTResult"
                                     filteredValue="#{rfqPrintController.filterResultList}"
                                     styleClass="ui-datatable-hor-scroll"
                                     rows="10"
                                     paginator="true" 
                                     reflow="true"
                                     > 
                            <!--filter 後變更筆數, 使用 Lazy Loading 不可直接 update 會抓到上次筆數，故用 oncomplete--> 
                            <p:ajax event="filter" oncomplete="doResize(); rcGetRowCountAfterFiltered();" /> 調整寬度 for chrome 


                            <p:column sortBy="#{row.mandt}" headerText="請購單號" width="180" filterBy="#{row.mandt}" filterStyle="width:60px">  
                                <h:outputText value=" #{row.mandt}" />
                            </p:column>

                            <p:column sortBy="#{row.mandt}" headerText="公司" width="180" filterBy="#{row.mandt}" filterStyle="width:60px">  
                                <h:outputText value=" #{row.mandt}" />
                            </p:column>

                            <p:column sortBy="#{row.mandt}" headerText="廠別" width="180" filterBy="#{row.mandt}" filterStyle="width:60px">  
                                <h:outputText value=" #{row.mandt}" />
                            </p:column>

                            <p:column sortBy="#{row.mandt}" headerText="申請人" width="180" filterBy="#{row.mandt}" filterStyle="width:60px">  
                                <h:outputText value=" #{row.mandt}" />
                            </p:column>

                            <p:column sortBy="#{row.mandt}" headerText="請購日期" width="180" filterBy="#{row.mandt}" filterStyle="width:60px">  
                                <h:outputText value=" #{row.mandt}" />
                            </p:column>

                            <p:column  headerText="列印" width="180"  filterStyle="width:60px">  
                                <h:commandLink actionListener="#{rfqPrintController.print()}" onclick="setUpBlockUI();">
                                    <h:graphicImage width="22" height="22" title="print" library="images" name="printer.png" style="vertical-align: bottom; border-style: none" />
                                    <p:fileDownload rendered="#{!empty rfqPrintController.file}" value="#{rfqPrintController.file}" />
                                </h:commandLink>
                            </p:column> 
                        </p:dataTable> 
                    </p:fieldset>
                </h:panelGroup>
            </p:panel>
        </h:form>

        <!-- 編輯對話框 -->
        <!--<ui:include src="/vender/inc_categoryEditDlg.xhtml"></ui:include>-->

        <!-- 功能權限檢查對話框 -->
        <!--        <ui:include src="/inc/inc_authorizationDlg.xhtml">
                    <ui:param name="controller" value="#{venderCategoryController}"/>
                </ui:include>-->

    </ui:define>
</ui:composition>

