<?xml version="1.0" encoding="UTF-8"?>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                >
    <style type="text/css">
        .col40 {
            width: 40%;
        }
        .col60 {
            width: 60%;
        }
    </style>
    
    <!-- BEGIN: 影片瀏覽區 -->
    <h:panelGroup id="pgIncList" >
        <!-- 縮小影片顯示 -->
        <p:dataGrid id="dgVideos" var="vo"
                    rendered="#{videos.showVideo}"
                    value="#{videos.videoList}" 
                    columns="3" rows="6" style="min-width:760px;"
                    paginator="true" paginatorPosition="bottom"
                    >
            <f:facet name="header">
                <p:commandButton value="#{videos.showTree?'隱藏樹狀圖':'顯示樹狀圖'}"
                                 icon="#{videos.showTree?'ui-icon-folder-collapsed':'ui-icon-folder-open'}" 
                                 actionListener="#{videos.displayTree()}" update=":fmMain" ></p:commandButton>
                <p:spacer width="5" height="10" />
                <p:commandButton value="#{videos.showVideo?'列表顯示':'縮小影片顯示'}"
                                 icon="#{videos.showVideo?'ui-icon-note':'ui-icon-video'}" 
                                 actionListener="#{videos.displayVideo()}" update=":fmMain:pgIncList" ></p:commandButton>
                <p:spacer width="10" height="10" />
                <p:outputLabel value="#{videos.editVO.cname}包含影片" rendered="#{videos.showEditNodeBlock()}" />
                <p:outputLabel value="包含影片" rendered="#{!videos.showEditNodeBlock()}" />
                <!-- 共 ? 筆 -->
                <h:outputText id="otRowCount" value="(共#{videos.videoList.size()}筆)" 
                              rendered="#{not empty videos.videoList}" />
            </f:facet>
            <p:panel header="#{vo.title}" style="text-align:center; width: 240px;">
                <!-- p:media  value="#{vo.url}" width="220" height="155" player="flash" /-->
                <h:panelGroup rendered="#{videos.showVideo}" >
                    <iframe width="150" height="120" src="#{vo.embedUrl}" frameborder="0" allowfullscreen="true" 
                            title="#{vo.title}" ></iframe>
                    <br/>
                    <h:panelGroup rendered="#{!videos.choiceOnly}" ><!-- for 自訂影片庫 -->
                        <p:commandLink rendered="#{videos.canEditVideo()}"
                                       actionListener="#{videos.prepareEditVideo(vo)}" 
                                       update="#{(!videos.choiceOnly)?':fmMain:pgOptions':''}" 
                                       oncomplete="gotoTop();" 
                                       title="編輯此項目" >
                            <h:graphicImage library="images" name="page_edit.png" styleClass="icons" />
                        </p:commandLink>
                        <p:commandLink rendered="#{videos.canEditVideo()}"
                                       title="刪除此項目" 
                                       actionListener="#{videos.deleteVideos(vo)}" 
                                       onclick="if( !confirm('您確定要刪除嗎?') ){ return false; }"
                                       oncomplete="afterCallBackHandler(xhr, status, args);" 
                                       update=":fmMain:pgIncList" 
                                       >
                            <h:graphicImage library="images" name="delete.png" styleClass="icons" />
                        </p:commandLink>
                    </h:panelGroup>
                </h:panelGroup>
                <!-- 選取 -->
                <p:commandLink rendered="#{videos.choiceOnly}"
                               onstart="selectVideo('#{vo.embedUrl}', '#{vo.title}');" 
                               style="cursor: pointer;"   
                               immediate="true" >
                    <h:graphicImage library="images" name="link_go.png" styleClass="icons" />
                    <p:outputLabel value="選取" />
                </p:commandLink>
            </p:panel>
        </p:dataGrid>
        
        <!-- 列表顯示 -->
        <p:remoteCommand name="getRowCountAfterFiltered" update=":fmMain:otRowCount" />

        <p:panelGrid columns="2" columnClasses="col40,col60" style="width:100%; text-align: left;"
                    rendered="#{!videos.showVideo}" >
            <h:panelGroup>
                <p:commandButton value="#{videos.showTree?'隱藏樹狀圖':'顯示樹狀圖'}"
                                 icon="#{videos.showTree?'ui-icon-folder-collapsed':'ui-icon-folder-open'}" 
                                 actionListener="#{videos.displayTree()}" update=":fmMain" ></p:commandButton>
                <p:spacer width="5" height="10" />
                <p:commandButton value="#{videos.showVideo?'列表顯示':'縮小影片顯示'}"
                                 icon="#{videos.showVideo?'ui-icon-note':'ui-icon-video'}" 
                                 actionListener="#{videos.displayVideo()}" update=":fmMain:pgIncList" ></p:commandButton>
                <p:spacer width="5" height="10" />
            </h:panelGroup>
            
            <h:panelGroup>
                <p:spacer width="5" height="10" />
                <p:outputLabel value="#{videos.editVO.cname}包含影片" 
                               rendered="#{videos.showEditNodeBlock()}" styleClass="value" />
                <p:outputLabel value="包含影片" rendered="#{!videos.showEditNodeBlock()}" styleClass="value" />
                <!-- 共 ? 筆 -->
                <p:outputLabel id="otRowCount" value="(共#{videos.filterResultList.size()}筆)" 
                               rendered="#{not empty videos.filterResultList}" styleClass="value" />
                
                <h:panelGroup rendered="#{not empty videos.filterResultList}">
                    <p:spacer width="5"/>
                    <!-- 匯出 -->
                    <p:commandButton value="#{msg['common.export']}" 
                                     icon="ui-icon-print" ajax="false" onclick="setUpBlockUI();"
                                     actionListener="#{videos.prepareExport()}">
                        <p:dataExporter type="xls" fileName="application" target=":fmMain:dtResult" 
                                        postProcessor="#{videos.postProcessXLS}" />
                    </p:commandButton>
                </h:panelGroup>
            </h:panelGroup>
        </p:panelGrid>
                    
        <p:dataTable rendered="#{!videos.showVideo}"
                     var="row" id="dtResult"
                     value="#{videos.videoList}" 
                     filteredValue="#{videos.filterResultList}"
                     styleClass="ui-datatable-hor-scroll"
                     paginator="true"
                     paginatorPosition="bottom"
                     rows="10"
                     rowsPerPageTemplate="10,20,30,50" >
            <p:ajax event="filter" oncomplete="getRowCountAfterFiltered();" />
            <f:facet name="header" ></f:facet>
            <!-- 操作 -->
            <p:column headerText="#{msg['table.action']}" 
                      style="text-align: center;" exportable="false"
                      width="40">
                <h:panelGroup rendered="#{!videos.choiceOnly}" ><!-- for 自訂影片庫 -->
                    <p:commandLink rendered="#{videos.canEditVideo()}"
                                   actionListener="#{videos.prepareEditVideo(row)}" 
                                   update="#{(!videos.choiceOnly)?':fmMain:pgOptions':''}" 
                                   oncomplete="gotoTop();" 
                                   title="編輯此項目" >
                        <h:graphicImage library="images" name="page_edit.png" styleClass="icons" />
                    </p:commandLink>
                    <p:commandLink rendered="#{videos.canEditVideo()}"
                                   title="刪除此項目" 
                                   actionListener="#{videos.deleteVideos(row)}" 
                                   onclick="if( !confirm('您確定要刪除嗎?') ){ return false; }"
                                   oncomplete="afterCallBackHandler(xhr, status, args);" 
                                   update=":fmMain:pgIncList" 
                                   >
                        <h:graphicImage library="images" name="delete.png" styleClass="icons" />
                    </p:commandLink>
                </h:panelGroup>
                <!-- 選取 -->
                <p:commandLink rendered="#{videos.choiceOnly}"
                               onstart="selectVideo('#{row.embedUrl}', '#{row.title}');" 
                               style="cursor: pointer;"   
                               immediate="true" >
                    <h:graphicImage library="images" name="link_go.png" styleClass="icons" />
                    <p:outputLabel value="選取" />
                </p:commandLink>
            </p:column>
            <!-- 發佈日期 -->
            <p:column headerText="發佈日期" width="70" sortBy="#{row.releaseDate}" >
                <h:outputText value="#{row.releaseDate}">
                    <f:convertDateTime pattern="yyyy/MM/dd"/>
                </h:outputText>
            </p:column>
            <!-- 發佈頻道 -->
            <p:column headerText="發佈頻道" width="100" sortBy="#{row.channel}"
                      filterMatchMode="contains" filterBy="#{row.channel}" >
                <h:outputText value="#{row.channel}" />
            </p:column>
            <!-- 標題 -->
            <p:column headerText="標題" width="200" sortBy="#{row.title}" 
                      filterMatchMode="contains" filterBy="#{row.title}" >
                <h:outputText value="#{row.title}" title="#{row.description}" />
            </p:column>
            <!-- 網址 -->
            <p:column headerText="網址" width="250" sortBy="#{row.url}" 
                      filterMatchMode="contains" filterBy="#{row.url}" >
                <h:outputText value="#{row.url}" />
            </p:column>
        </p:dataTable>
    </h:panelGroup>
    <!-- END: 影片瀏覽區 -->
</ui:composition>