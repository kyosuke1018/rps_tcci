<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                template="/templates/generalPageTemplate.xhtml"
                xmlns:c="http://xmlns.jcp.org/jsp/jstl/core">

    <ui:define name="title">
        <h:outputText value="#{comparisonTableController.funcTitle}" />
    </ui:define>


    <ui:define name="head"> 
    </ui:define>
    <ui:define name="content">
        <ui:include src="/inc/inc_globalMessage.xhtml"></ui:include>
        <h:form id="fmMain" prependId="false" >

            <p:panel header="#{comparisonTableController.funcTitle}" style="overflow-x: scroll;"  >
                <h:panelGroup>
                    <p:fieldset legend="關聯標案資訊" toggleable="false" >
                        <p:panelGrid columns="4" >
                            <p:outputLabel value="標案編號：" styleClass="fieldname" />
                            <h:panelGroup>
                                <p:inputText value="200401002387" size="20" />
                                <p:spacer width="5" height="5" />
                                <!--here-->
                                <p:commandButton value="查詢"   actionListener="#{comparisonTableController.doQuery()}" 
                                                 update=":fmMain" />
                            </h:panelGroup>
                        </p:panelGrid>

                        <h:panelGroup rendered="#{!empty comparisonTableController.lazyModel}" >
                            <hr/>
                            <p:panelGrid columns="6" >
                                <c:forEach items="#{comparisonTableController.comparisonListVenderlList}" var="comparisonTableVender" varStatus="metadata">
                                    <h:panelGroup style="text-align: left;">
                                        <div style="white-space: pre-wrap">
                                            <h:selectBooleanCheckbox value="#{comparisonTableVender.check}" >
                                                <f:ajax listener="#{comparisonTableController.doRecalculation(comparisonTableVender.lifnr)}" render="@form" />
                                            </h:selectBooleanCheckbox>
                                            <h:outputText value="#{comparisonTableVender.lifnr}" />  
                                            <h:outputText value="#{comparisonTableVender.name1}" />
                                        </div>
                                    </h:panelGroup>
                                </c:forEach>                                
                            </p:panelGrid>
                        </h:panelGroup>
                    </p:fieldset> 


                    <p:fieldset id="fsResult" legend="#{msg['search.result']}">
                        <p:dataTable id="dtResult" var="row"  
                                     value="#{comparisonTableController.lazyModel}" lazy="true"
                                     widgetVar="wvDTResult"
                                     filteredValue="#{comparisonTableController.filterResultList}"
                                     styleClass="ui-datatable-hor-scroll"
                                     rows="10"
                                     paginator="true" 
                                     reflow="true"
                                     > 
                            <p:ajax event="filter" oncomplete="doResize(); rcGetRowCountAfterFiltered();" /> 調整寬度 for chrome 

                            <p:column width="100">
                                <f:facet name="header">
                                    <h:panelGroup style="text-align: left;">
                                        <div style="white-space: pre-wrap">
                                            <h:outputText value="料物" />
                                        </div>
                                        <div style="white-space: pre-wrap">
                                            <h:outputText value="短文本" />
                                        </div>
                                        <div style="white-space: pre-wrap">
                                            <h:outputText value="基本單位的數量" />
                                        </div>
                                    </h:panelGroup>
                                </f:facet>
                                <div style="white-space: pre-wrap">
                                    <h:outputText  value="#{row.matnr.substring(6)  }" />
                                </div>
                                <div style="white-space: pre-wrap">
                                    <h:outputText  value="#{row.txz01}" />
                                </div>
                                <div style="white-space: pre-wrap">
                                    <h:outputText  value="#{row.menge}" />
                                </div>
                                <f:facet name="footer">
                                    <h:panelGroup style="text-align: left;">
                                        <div style="white-space: pre-wrap">
                                            <h:outputText value="總報價" />
                                        </div>
                                    </h:panelGroup>
                                </f:facet>
                            </p:column>


                            <p:column width="35">
                                <f:facet name="header">
                                    <h:panelGroup style="text-align: left;">
                                        <div style="white-space: pre-wrap">
                                            <h:outputText value="報價:" />
                                        </div>
                                        <div style="white-space: pre-wrap">
                                            <h:outputText value="投標人:" />
                                        </div>
                                        <div style="white-space: pre-wrap">
                                            <h:outputText value="名稱:" />
                                        </div>
                                    </h:panelGroup>
                                </f:facet>
                                <f:facet name="footer">
                                    <h:panelGroup style="text-align: left;">
                                        <div style="white-space: pre-wrap">
                                            <h:outputText escape="false" value="值:" />
                                        </div>
                                        <div style="white-space: pre-wrap">
                                            <h:outputText escape="false" value="排列:" />
                                        </div>
                                    </h:panelGroup>
                                </f:facet>
                                <div style="white-space: pre-wrap">
                                    <h:outputText escape="false" value="值:" />
                                </div>
                                <div style="white-space: pre-wrap">
                                    <h:outputText escape="false" value="價格:" />
                                </div>
                                <div style="white-space: pre-wrap">
                                    <h:outputText escape="false" value="排列:" />
                                </div>
                            </p:column>


                            <c:forEach  items="#{comparisonTableController.comparisonListVenderlList}" var="comparisonTableVender" varStatus="metadata">
                                <p:column width="80" rendered="#{comparisonTableVender.show}">
                                    <f:facet name="header">
                                        <h:panelGroup style="text-align: left;">
                                            <div style="white-space: pre-wrap">
                                                <h:outputText value="#{comparisonTableVender.lifnr.substring(3)}" />
                                            </div>
                                            <div style="white-space: pre-wrap">
                                                <h:outputText value="#{comparisonTableVender.createtime}" />
                                            </div>
                                            <div style="white-space: pre-wrap">
                                                <h:outputText value="#{comparisonTableVender.name1}" />
                                            </div>
                                        </h:panelGroup>
                                    </f:facet>
                                    <div style="white-space: pre-wrap; text-align: right;">
                                        <h:outputText value="#{row.factorValue.get(comparisonTableVender.name1).totalPrice}">
                                            <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                        </h:outputText>
                                    </div>
                                    <div style="white-space: pre-wrap; text-align: right;">
                                        <h:outputText value="#{row.factorValue.get(comparisonTableVender.name1).perPrice}">
                                            <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                        </h:outputText>
                                    </div>
                                    <div>  
                                        <p style="float: left; margin-bottom: 12px;margin-top: 0px;">
                                            <h:outputText escape="false" value="#{comparisonTableVender.values.rank}" />
                                        </p>
                                        <p style="float: right; margin-bottom: 12px;margin-top: 0px;">
                                            <h:outputText escape="false" value="#{row.factorValue.get(comparisonTableVender.name1).percentage}"  />%
                                        </p>
                                    </div>

                                    <f:facet name="footer">
                                        <h:panelGroup style="text-align: left;">
                                            <div style="white-space: pre-wrap; text-align: right;">
                                                <h:outputText value="#{comparisonTableVender.finalValues.totalPrice}">
                                                    <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                                </h:outputText>
                                            </div>
                                            <div>  
                                                <p style="float: left; margin-bottom: 0px;margin-top: 0px;">
                                                    <h:outputText escape="false" value="#{comparisonTableVender.values.rank}" />
                                                </p>
                                                <p style="float: right; margin-bottom: 0px;margin-top: 0px;">
                                                    <h:outputText escape="false" value="#{comparisonTableVender.finalValues.percentage}"  />%
                                                </p>
                                            </div>
                                        </h:panelGroup>
                                    </f:facet>
                                </p:column>
                            </c:forEach>



                            <p:column sortBy="#{row.mandt}" headerText="平均" width="100" >  
                                <div style="white-space: pre-wrap; text-align: right;">
                                    <h:outputText value="#{row.mean}">
                                        <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                    </h:outputText>
                                </div>
                                <div style="white-space: pre-wrap; text-align: right;">
                                    <h:outputText value="#{row.perMean}">
                                        <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                    </h:outputText>
                                </div>
                                <div style="white-space: pre-wrap">
                                </div>                             
                                <f:facet name="footer">
                                    <h:panelGroup style="text-align: left;">
                                        <div style="white-space: pre-wrap; text-align: right;">
                                            <h:outputText value="#{comparisonTableController.totalMean}">
                                                <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                            </h:outputText>
                                        </div>
                                    </h:panelGroup>
                                </f:facet>                                     
                            </p:column>                                 



                            <p:column sortBy="#{row.mandt}" headerText="最小" width="100" >  
                                <div style="white-space: pre-wrap; text-align: right;">
                                    <h:outputText value="#{row.min}">
                                        <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                    </h:outputText>
                                </div>
                                <div style="white-space: pre-wrap; text-align: right;">
                                    <h:outputText value="#{row.perMin}">
                                        <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                    </h:outputText>
                                </div>
                                <div style="white-space: pre-wrap">
                                </div>                             
                                <f:facet name="footer">
                                    <h:panelGroup style="text-align: left;">
                                        <div style="white-space: pre-wrap; text-align: right;">
                                            <h:outputText value="#{comparisonTableController.totalMin}">
                                                <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                            </h:outputText>
                                        </div>
                                    </h:panelGroup>
                                </f:facet>                                     
                            </p:column>                                  


                            <p:column sortBy="#{row.budget}" headerText="請購單預算" width="100" >  
                                <div style="white-space: pre-wrap; text-align: right;">
                                    <h:outputText value="#{row.budget}">
                                        <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                    </h:outputText>
                                </div>
                                <div style="white-space: pre-wrap; text-align: right;">
                                    <h:outputText value="#{row.perbudget}">
                                        <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                    </h:outputText>
                                </div>
                                <div style="white-space: pre-wrap">
                                </div>                             
                                <f:facet name="footer">
                                    <h:panelGroup style="text-align: left;">
                                        <div style="white-space: pre-wrap; text-align: right;">
                                            <h:outputText value="#{comparisonTableController.totalBudget}">
                                                <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                            </h:outputText>
                                        </div>
                                    </h:panelGroup>
                                </f:facet>                                     
                            </p:column>                        


                            <p:column sortBy="#{row.poPrice}" headerText="單場PO前構價" width="100" >  
                                <div style="white-space: pre-wrap; text-align: right;">
                                    <h:outputText value="#{row.poPrice}">
                                        <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                    </h:outputText>
                                </div>
                                <div style="white-space: pre-wrap; text-align: right;">
                                    <h:outputText value="#{row.perPreis}">
                                        <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                    </h:outputText>
                                </div>
                                <div style="white-space: pre-wrap">
                                </div>                             
                                <f:facet name="footer">
                                    <h:panelGroup style="text-align: left;">
                                        <div style="white-space: pre-wrap; text-align: right;">
                                            <h:outputText value="#{comparisonTableController.totalPoPirce}">
                                                <f:convertNumber pattern="###,###.00" currencySymbol="$" type="currency"/>
                                            </h:outputText>
                                        </div>
                                    </h:panelGroup>
                                </f:facet>                                     
                            </p:column>                            
                        </p:dataTable>
                    </p:fieldset>
                </h:panelGroup>
            </p:panel>
        </h:form>



        <!-- 編輯對話框 -->
        <!--<ui:include src="/vender/inc_categoryEditDlg.xhtml"></ui:include>-->

        <!-- 功能權限檢查對話框 -->
        <!--        <ui:include src="/inc/inc_authorizationDlg.xhtml">
                    <ui:param name="controller" value="#{venderCategoryController}"/>
                </ui:include>-->

    </ui:define>
</ui:composition>

