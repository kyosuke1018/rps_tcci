}

#footer {
    text-align: center;
    margin-top: 1em;
}

/* theme */
.ui-state-default a,.ui-state-default a:link, .ui-state-default a:visited {
    color: #8D8378 !important;
    text-decoration: none;
}

/*.ui-widget {
    font-size: 1.1em;
    overflow: auto;
}*/
.ui-dt-c {
    padding-top: 2px !important;
}
.ui-state-default {
    font-weight: normal !important;
}
.ui-panel{
    width: 100%
}

.ui-datatable-header {
    text-align: left !important;
}

.ui-fieldset .ui-fieldset-legend {
    font-size: 1.1em;
    padding: 0.5em 1em;
    border: none;
    background: inherit;
}

a:link, a:hover {
    color: #005790;
    font-size:12px;
    font-family: Arial,Helvetica,sans-serif;
    text-decoration: none;
}

a:visited {
    color: #8FA1B0;
    font-size:12px;
    font-family: Arial,Helvetica,sans-serif;
    text-decoration: none;
}

a img {
    vertical-align: middle;
    padding-right: 2px;
}

.systemname {
    color: #82786F;
    font-family: Arial,Helvetica,sans-serif;
    font-size: 28px;
    font-weight: normal;
    line-height: normal;
    margin: 10px 220px 10px 30px;
    padding-top: 2px;
}

img {
    border: none;
}

label.required
{
    background-image:url("#{resource['images:field_required.gif']}");
    background-position:right center;
    background-repeat:no-repeat;
    padding-right:12px;
}

img.button
{
    cursor: pointer;
    vertical-align: bottom;
}

.ui-datatable-odd {
    background: none repeat scroll 0 0 #F2F5F9;
}

.img-bg {
    background-image:url("#{resource['images:contentBg.jpg']}");
    background-repeat:no-repeat;
    background-size: contain;
    background-position:center top;
    height: 100%;
    width: 100%;
}

/* 物料群組 picklist */
.ui-picklist.mg .ui-picklist-list{
    width: 230px;
}

#_divMyExport {
    color: #8F4150;
    font-size: 14px;
    text-align: right;
    border-radius:10%;
}

p.wordBreak {
    word-wrap: break-word;
    margin: 0px;
    padding: 0px;
}

.div_right_bottom {
    width:40px;
    float:right;
    position:fixed;
    right:0px;
    bottom:5px;
    z-index:200;
    border:none;
    _position:absolute; /* position fixed for IE6 */
}

.username {
    color:#9898A8;
    font-size: 10px;
}

.datetime {
    color:#5858E8;
    font-size: 12px;
}

.fieldname{
    font-weight: bold;
    color: #003366;
}

.street4Fieldname{
    font-weight: bold;
    color: #AA6000;
}

.sensitiveFieldname{
    font-weight: bold;
    color: #AA0000;
}

.alertBig{
    text-align: center; 
    font-weight: bold;
    color: red;
    font-size: 20px;
}

/* icon style */
img.icons {
    width: 16px;
    height: 16px;
    vertical-align: middle; 
    border-style: none;
    margin-right: 2px;
    margin-left: 2px;
} 

img.iconsBig {
    width: 24px;
    height: 24px;
    vertical-align: middle; 
    border-style: none;
    margin-right: 1px;
    margin-left: 1px;
} 

img.iconsHelp {
    width: 24px;
    height: 24px;
    vertical-align: middle; 
    border-style: none;
    margin-right: 1px;
    margin-left: 1px;
    cursor: help;  
} 

/* link cursor */
a img {
    cursor: pointer; 
}

/* 簽核 */
span.ballot {color:#2e6e9e;}

.scrollRightDiv {
    width:40px;
    float:right;
    position:fixed;
    right:0px;
    bottom:150px;
    z-index:2000;
    border:none;
    _position:absolute; /* position fixed for IE6 */    
}

.scrollLefttDiv {
    width:40px;
    float:left;
    position:fixed;
    left:0px;
    bottom:150px;
    z-index:2000;
    border:none;
    _position:absolute; /* position fixed for IE6 */    
}

.datalist-noborder .ui-widget-content {
border: none;
}

.ui-dialog .ui-dialog-titlebar {
    background-color: #e3f1fc !important;
    margin: 0px 0px 0px 0px !important;
}

.ui-datatable-tablewrapper tbody tr td .ui-column-title {
   color: #381d4c !important;
   font-weight:bold !important;
}

.prplantablecss .ui-datatable-tablewrapper table thead tr th {
   width: 140px;
}
