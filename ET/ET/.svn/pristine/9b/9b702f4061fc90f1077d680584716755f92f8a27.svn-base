html, body {
    font-size: 12px;
    margin:0;
    font-family: "微軟正黑體", "新細明體", "simhei", sans-serif, Arial;
}
table {
    font-size: 12px;
}

th{
    border-bottom-color:#D8D8D8;
}
td {
    border-bottom-color:#D8D8D8;
}

#header {
    width: 100%;
    height: 55px;
    position: relative;
    background:#FFFFFF ;
}

#header .titleBar {
    width: 100%;
    height: 37px;
    margin: 0px;
    border-collapse: collapse;
    position: absolute;
    top: 0px;
    left: 0px;
    table-layout: fixed;
    background-color: #6EA7D1;
}

#header .titleBar .left {
    width: 10px;
}

#header .titleBar .middle1 {
}

#header .titleBar .middle2 {
}

#header .titleBar .middle3 {
    padding-right: 10px;
}

#header .titleBar .right {
    width: 89px;
    padding-right: 20px;
}

#header .menuBar {
    width: 100%;
    position: absolute;
    top: 38px;
    left: 0px;
}

#header .menuBar .left {
    width: 20px;
}

#header .menuBar .menu {
    padding-left:  20px;
    padding-right: 20px;
    color: #3277aa;
    height: 27px !important;
    font-size: 14px;
}

#header .menuBar img {
    width: 100%;
    height: 1px;
}

#header .title {
    height: 37px;
    position: absolute;
    left: 60px;
    color: #FFFFFF;
    background-color: #6EA7D1;
    font-size: 21px;
    font-weight: bolder;
    text-shadow: -1px -1px 0px rgba(35, 91, 132, .8);
}

#header #user {
    margin-top: -3px;
    color: #FFFFFF;
    font-size: 14px;
    text-align: right;
    text-shadow: -1px -1px 0px rgba(35, 91, 132, .8);
}

#header .logoBase {
    width: 235px;
    height: 114px;
    position: absolute;
    top: 0px;
    left: 5px;
    background: url("#{resource['images:header_logoBase.png']}") no-repeat;
}

#header .logo {
    width: 35px;
    height: 35px;
    top: 0px;
    left: 20px;
    position: absolute;
    background: url("#{resource['images:logo.png']}") no-repeat;
    background-size: contain;
}

#header .logout {
    width: 62px;
    height: 27px;
    margin-left: 5px;
    margin-top: -2px;
    background: url("#{resource['images:logout.png']}") no-repeat;
}

#header .logout:hover {
    cursor: pointer;
    background: url("#{resource['images:logout_hover.gif']}") no-repeat;
}

#header .logout:active {
    background: url("#{resource['images:logout_active.png']}") no-repeat;
}

#header .logout span {
    width: 62px;
    height: 27px;
    display: inline-block;
    margin: 0px;
    padding: 6px 0px 0px 10px;
    color: #6ea7d1;
    font-size: 11px;
}

#header .logout span:active {
    background: url("#{resource['images:logout_active.png']}") no-repeat;
}

#mainMenu .ui-menu {
    border: none !important;
    padding: 0px !important;
    font-size: 14px !important;
}


