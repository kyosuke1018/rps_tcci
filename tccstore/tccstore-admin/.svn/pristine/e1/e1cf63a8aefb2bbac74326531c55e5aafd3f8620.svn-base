<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                template="/templates/generalPageTemplate.xhtml">
    <ui:define name="title">#{msgPartner['partner.label.listPartner']}</ui:define>
    <ui:define name="content">
        <h:form id="form" prependId="false">
            <p:panel header="#{msgPartner['partner.label.listPartner']}">
                <p:fieldset legend="#{msgApp['app.fieldset.queryfilter']}">
                    <h:panelGrid columns="6" style="width: 100%;">
                        <p:outputLabel value="#{msgPartner['partner.label.status']}"
                                       for="status"/>
                        <p:selectOneMenu id="status" value="#{partnerController.filter.status}">
                            <f:selectItem itemValue=""/>
                            <f:selectItems value="#{partnerController.statusList}"
                                           var="status"
                                           itemLabel="#{status.displayName}"
                                           itemValue="#{status}"/>
                        </p:selectOneMenu>
                        
                        <p:outputLabel value="#{msgPartner['partner.label.owner']}"
                                       for="loginAccount"/>
                        <p:autoComplete id="loginAccount"
                                        value="#{partnerController.filter.loginAccount}"
                                        dropdown="true"
                                        forceSelection="true"
                                        completeMethod="#{partnerController.completeOwner}"
                                        maxResults="15"/>
                        
                        <p:outputLabel value="#{msgPartner['partner.label.name']}"
                                       for="name"/>
                        <p:inputText id="name" value="#{partnerController.filter.name}"/>
                        
                        <p:outputLabel value="#{msgPartner['partner.label.province']}"
                                       for="province"/>
                        <p:selectOneMenu id="province"
                                         value="#{partnerController.filter.province}">
                            <f:selectItem itemLabel="" itemValue=""/>
                            <f:selectItems value="#{partnerController.provinces}"/>
                        </p:selectOneMenu>
                        
                        <p:outputLabel value="#{msgPartner['partner.label.active']}"
                                       for="active"/>
                        <p:selectOneMenu id="active" value="#{partnerController.filter.active}">
                            <f:selectItem itemValue=""/>
                            <f:selectItem itemLabel="#{msgPartner['partner.label.active.active']}"
                                          itemValue="#{true}"/>
                            <f:selectItem itemLabel="#{msgPartner['partner.label.active.inactive']}"
                                          itemValue="#{false}"/>
                        </p:selectOneMenu>
                        
                    </h:panelGrid>
                    <p:commandButton value="#{msgApp['app.button.query']}"
                                     action="#{partnerController.query}"
                                     update="datalist :messages :growl"
                                     icon="ui-icon-search"/>
                </p:fieldset>
                <p:fieldset legend="#{msgApp['app.fieldset.queryresult']}">
                    <p:dataTable value="#{partnerController.items}"
                                 id="datalist"
                                 paginator="true"
                                 rows="10"
                                 tableStyle="table-layout: auto;"
                                 var="partner">
                        <f:facet name="header">  
                            <h:commandLink>
                                <h:graphicImage library="images" name="excel_exports.png" />
                                <p:dataExporter type="xls" target="datalist" fileName="PartnerExport"/>
                                <h:outputText value="汇出excel"/>
                            </h:commandLink>
                        </f:facet>  
                        <p:column headerText="#{msgApp['app.label.action']}"
                                  style="text-align: center; white-space: nowrap; width: 70px;">
                            <p:commandLink action="#{partnerController.approve(partner)}"
                                           onstart="return confirm('确认要核准此伙伴吗?');"
                                           update=":growl :messages datalist"
                                           disabled="#{partner.status ne 'APPLY'}">
                                <h:graphicImage title="#{msgApp['app.button.approve']}" library="images" name="ok24.png"/>
                            </p:commandLink>
                            <p:commandLink action="#{partnerController.reject(partner)}"
                                           onstart="return confirm('确认要驳回此伙伴吗?');"
                                           update=":growl :messages datalist"
                                           disabled="#{partner.status ne 'APPLY'}">
                                <h:graphicImage title="#{msgApp['app.button.cancel']}" library="images" name="cancel24.png"/>
                            </p:commandLink>
                        </p:column>
                        <p:column headerText="#{msgPartner['partner.label.status']}">
                            <h:outputText value="#{partner.status.displayName}"/>
                        </p:column>
                        <p:column headerText="#{msgPartner['partner.label.id']}">
                            <p:commandLink value="#{partner.id}"
                                           action="#{partnerController.prepareEdit(partner)}"
                                           oncomplete="PF('wvPartnerDialog').show();"
                                           update=":formViewPartner"/>
                        </p:column>

                        <p:column headerText="#{msgPartner['partner.label.owner']}">
                            <h:outputText value="#{partner.owner.loginAccount}"/>
                        </p:column>

                        <p:column headerText="#{msgPartner['partner.label.name']}">
                            <h:outputText value="#{partner.name}"/>
                        </p:column>

                        <p:column headerText="#{msgPartner['partner.label.contact']}">
                            <h:outputText value="#{partner.contact}"/>
                        </p:column>

                        <p:column headerText="#{msgPartner['partner.label.phone']}">
                            <h:outputText value="#{partner.phone}"/>
                        </p:column>

                        <!--
                        <p:column headerText="#{msgPartner['partner.label.social']}">
                            <h:outputText value="#{partner.social}"/>
                        </p:column>
                        -->

                        <p:column headerText="#{msgPartner['partner.label.province']}">
                            <h:outputText value="#{partner.province}"/>
                        </p:column>

                        <p:column headerText="#{msgPartner['partner.label.city']}">
                            <h:outputText value="#{partner.city}"/>
                        </p:column>

                        <p:column headerText="#{msgPartner['partner.label.district']}">
                            <h:outputText value="#{partner.district}"/>
                        </p:column>

                        <p:column headerText="#{msgPartner['partner.label.town']}">
                            <h:outputText value="#{partner.town}"/>
                        </p:column>

                        <p:column headerText="#{msgPartner['partner.label.address']}">
                            <h:outputText value="#{partner.address}"/>
                        </p:column>

                        <p:column headerText="#{msgPartner['partner.label.active']}"
                                  style="text-align: center;">
                            <h:outputText value="#{msgPartner['partner.label.active.active']}"
                                          rendered="#{partner.active}"/>
                            <h:outputText value="#{msgPartner['partner.label.active.inactive']}"
                                          rendered="#{not partner.active}"/>
                        </p:column>

                        <p:column headerText="#{msgPartner['partner.label.averageRate']}">
                            <h:outputText value="#{partner.averageRate}"/>
                        </p:column>

                    </p:dataTable>
                </p:fieldset>
            </p:panel>
        </h:form>
<!--        <ui:include src="rejectPartner.xhtml"/>
        <ui:include src="editPartner.xhtml"/>-->
        <ui:include src="inc_viewPartner.xhtml"/>
    </ui:define>
</ui:composition>