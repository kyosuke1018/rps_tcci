  <body>
    <div class="mailbody">
      <p>您好:</p>
      <p>合约同步结果:</p>
#if ("$syncError" != "")
      <p class="alert">同步失败, transaction will be rollback!, $syncError</p>
#end

      <table id="result1" class="dataTable">
        <tr>
          <th colspan="6">合约主档</th>
        </tr>
        <tr>
          <th>合约代码</th>
          <th>合约名称</th>
          <th>客户代码</th>
          <th>客户名称</th>
          <th>启用</th>
          <th>讯息</th>
        </tr>
#foreach ($vo1 in $syncData.result1)
#if ($vo1.valid)
        <tr>
#else
        <tr class="alert">
#end
          <td>$!vo1.code</td>
          <td>$!vo1.name</td>
          <td>$!vo1.customer</td>
          <td>$!vo1.ecCustomer.name</td>
          <td>$!vo1.active</td>
          <td>$!vo1.message</td>
        </tr>
#end        
      </table>
<br/>
      <table id="result2" class="dataTable">
        <tr>
          <th colspan="7">合约商品</th>
        </tr>
        <tr>
          <th>合约代码</th>
          <th>合约项次</th>
          <th>商品代码</th>
          <th>厂代码</th>
          <th>销售地区代码</th>
          <th>提货方式</th>
          <th>讯息</th>
        </tr>
#foreach ($vo2 in $syncData.result2)
#if ($vo2.valid)
        <tr>
#else
        <tr class="alert">
#end
          <td>$!vo2.contract</td>
          <td>$!vo2.posnr</td>
          <td>$!vo2.product</td>
          <td>$!vo2.plant</td>
          <td>$!vo2.salesarea</td>
          <td>$!vo2.method</td>
          <td>$!vo2.message</td>
        </tr>
#end        
      </table>
    </div>
