<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                template="/templates/generalPageTemplate.xhtml">
    <ui:define name="title">#{msgApp['app.menu.sysadmin.vaultmgmt']}</ui:define>
    <ui:define name="content">
        <h:form id="form" prependId="false">
            <p:panel>
                <f:facet name="header">
                    <table width="100%">
                        <tr>
                            <td>
                                <h:outputText value="#{msgApp['app.menu.sysadmin.vaultmgmt']}"/>    
                            </td>
                            <td style="text-align: right;">
                                <p:commandLink action="#{vaultmgmtController.initRecycleBin}"
                                               update="recycleBinDialog"
                                               oncomplete="recycleBinDialogVar.show();"
                                               >
                                    <h:graphicImage library="images" name="recycleBin.png"
                                                    height="18" width="18"
                                                    title="#{msgVaultmgmt['vaultmgmt.label.recycleBin']}"/>
                                </p:commandLink>
                            </td>
                        </tr>
                    </table>
                </f:facet>


                <p:commandButton icon="ui-icon-tag"
                                 value="#{msgVaultmgmt['fvvault.button.removeAllUnreferenceFvitem']}"
                                 action="#{vaultmgmtController.removeAllUnreferenceFvitem}"/>
                <p:spacer width="5"/>
                <p:selectBooleanCheckbox value="#{vaultmgmtController.backupFileFlag}" 
                                         itemLabel="#{msgVaultmgmt['vaultmgmt.label.backupFile']}"
                                         style="color: red;"
                                         />
                <p:dataTable id="datalist"
                             value="#{vaultmgmtController.items}"
                             var="vo"
                             rows="10"
                             paginator="true"
                             paginatorPosition="bottom"
                             expandedRow="true">
                    <f:facet name="header">
                        <p:commandButton action="#{vaultmgmtController.removeUnreferenceFvitem}"
                                         icon="ui-icon-tag"
                                         value="#{msgVaultmgmt['fvvault.button.removeUnreferenceFvitem']}"/>
                    </f:facet>
                    <p:column style="width:16px;">
                        <f:facet name="header">
                            <p:selectBooleanCheckbox id="selectAll" 
                                                     value="#{vaultmgmtController.selectAll}">
                                <p:ajax event="change" 
                                        listener="#{vaultmgmtController.changeSelectAll}"
                                        update=":form"
                                        global="false"/>
                            </p:selectBooleanCheckbox>
                        </f:facet>
                        <h:panelGroup id="checkBoxGroup">
                            <p:selectBooleanCheckbox value="#{vo.selected}">
                                <p:ajax event="change" 
                                        listener="#{vaultmgmtController.selectOne}"
                                        update=":form"
                                        global="false"/>
                            </p:selectBooleanCheckbox>
                        </h:panelGroup>
                    </p:column>
                    <p:column sortBy="#{vo.domain.name}"
                              headerText="Domain">
                        <h:outputText value="#{vo.domain.name}"/>
                    </p:column>
                    <p:rowExpansion>
                        <p:dataTable value="#{vo.vaultList}"
                                     var="item"
                                     style="margin-left: 30px;margin-right:0px !important;">
                            <p:column sortBy="#{item.id}">
                                <f:facet name="header">ID</f:facet>
                                <h:outputText value="#{item.id}"/>
                            </p:column>
                            <p:column sortBy="#{item.name}">
                                <f:facet name="header">#{msgVaultmgmt['fvvault.label.name']}</f:facet>
                                <h:outputText value="#{item.name}"/>
                            </p:column>
                            <p:column sortBy="#{item.hostname}">
                                <f:facet name="header">#{msgVaultmgmt['fvvault.label.hostname']}</f:facet>
                                <h:outputText value="#{item.hostname}"/>
                            </p:column>
                            <p:column sortBy="#{item.domain.name}">
                                <f:facet name="header">#{msgVaultmgmt['fvvault.label.domain']}</f:facet>
                                <h:outputText value="#{item.domain.name}"/>
                            </p:column>
                            <p:column sortBy="#{item.location}">
                                <f:facet name="header">#{msgVaultmgmt['fvvault.label.location']}</f:facet>
                                <h:outputText value="#{item.location}"/>
                            </p:column>
                            <p:column sortBy="#{item.readonly}"
                                      style="text-align: center;">
                                <f:facet name="header">#{msgVaultmgmt['fvvault.label.readonly']}</f:facet>
                                <p:selectBooleanCheckbox value="#{item.readonly}"
                                                         disabled="true"/>
                            </p:column>
                            <p:column sortBy="#{item.enabled}"
                                      style="text-align: center;">
                                <f:facet name="header">#{msgVaultmgmt['fvvault.label.enabled']}</f:facet>
                                <p:selectBooleanCheckbox value="#{item.enabled}"
                                                         disabled="true"/>
                            </p:column>
                        </p:dataTable>
                    </p:rowExpansion>
                </p:dataTable>
            </p:panel>
            <ui:include src="inc_recycleBinDialog.xhtml"/>
        </h:form>
    </ui:define>
</ui:composition>