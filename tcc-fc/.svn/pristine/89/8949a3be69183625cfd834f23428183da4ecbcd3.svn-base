<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:p="http://primefaces.org/ui"
      xmlns:h="http://java.sun.com/jsf/html">
    <f:view contentType="text/html">
        <h:head>
            <ui:include src="/jsff/head.xhtml"/>
        </h:head>
        <h:body>
            <p:growl id="growl" showDetail="false" autoUpdate="true" widgetVar="growlWV"/>
            <div class="page">
                
                <div class="header">
                    <ui:include src="/jsff/pageHeader.xhtml"/>
                </div>

                <div class="content">
                    <h:panelGroup rendered="#{userSession.isValid()}">
                        <ui:insert name="content"/>
                    </h:panelGroup>
                    <h:panelGroup rendered="#{!userSession.isValid()}">
                        <div class="userError">
                            <h:outputText value="帳號資料尚未設定，請聯絡台訊客服人員"/>
                        </div>
                    </h:panelGroup>
                </div>  <!-- content -->
                
                <div class="footer">
                    <ui:include src="/jsff/pageFooter.xhtml"/>
                </div>
                
            </div> <!-- page -->
            <ui:include src="/jsff/ajaxStatusDlg.xhtml"/>
        </h:body>
    </f:view>
</html>
