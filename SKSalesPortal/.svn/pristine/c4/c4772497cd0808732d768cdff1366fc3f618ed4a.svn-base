<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                template="../../templates/generalPageTemplate.xhtml">
    <ui:define name="title">
        #{msg['menu.sales.report.sales.achievement.detail']}
    </ui:define>    
    <ui:define name="content">
        <h:form prependId="false">
            <p:panel header="#{msg['menu.sales.report.sales.achievement.detail']}">
                <p:fieldset legend="#{msg['search.criteria']}:">
                    <ui:include src="../../jsff/selectSalesYearMonth.xhtml"/>
                    <h:panelGrid columns="1" width="50%">
                        <h:panelGroup>
                            <p:commandButton value="#{msg['button.search']}" action="#{salesAchievementDetailReportController.doSearchAction}" update="searchResult messages" />
                            <p:commandButton icon="ui-icon-disk" 
                                             value="#{msg['button.excel']}"
                                             ajax="false"
                                             id="reportBtn2"
                                             style="display:#{salesAchievementDetailReportController.salesDayAchievementList ne null ? 'inline' : 'none'};">
                                <p:spacer width="20px"/>
                                <p:dataExporter type="xls" target="salesDailyAchievementReporttbl" fileName="salesAchievementDetail" 
                                                postProcessor="#{salesAchievementDetailReportController.postProcessXLS}"
                                                excludeColumns="9"/>  
                            </p:commandButton>
                        </h:panelGroup>
                    </h:panelGrid>                    
                </p:fieldset>
                <p:fieldset id="searchResult" legend="#{msg['search.result']}:"  style="display:#{salesAchievementDetailReportController.salesDayAchievementList ne null ?'block':'none'}">
                    <ui:include src="../../jsff/report/sales_daily_achievement_report.xhtml"/>
                </p:fieldset>
            </p:panel>    
        </h:form>
    </ui:define>    
</ui:composition>