<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                template="../templates/generalPageTemplate.xhtml">
    <ui:define name="title">
        #{msg['menu.finance.advancepayment']}
    </ui:define>    
    <ui:define name="content">
        <h:form prependId="false">
            <f:metadata>
                <f:viewParam name="action" value="#{advancePaymentController.action}"/>
            </f:metadata>        
            <p:panel header="#{msg['menu.finance.advancepayment']}">
                <p:fieldset legend="#{msg['search.criteria']}:">
                    <h:panelGrid columns="4" width="100%">
                        <h:outputLabel value="#{msg['common.label.modifytimestamp']}:" for="date"/>
                        <h:panelGroup id="modifytimestamp">
                            <p:calendar id="beginModifytimestamp" 
                                        navigator="true"
                                        showOn="button" 
                                        pattern="yyyy/MM/dd" 
                                        size="16"
                                        value="#{advancePaymentController.beginModifytimestamp}" 
                                        />
                            ~ 
                            <p:calendar id="endModifytimestamp" 
                                        navigator="true"
                                        showOn="button" 
                                        pattern="yyyy/MM/dd" 
                                        size="16"
                                        value="#{advancePaymentController.endModifytimestamp}" 
                                        />
                        </h:panelGroup>
                        <h:outputLabel for="create_group" value="#{msg['common.label.creator.or.modifier']}:" style="margin-right: 10px"/>
                        <h:panelGroup id="create_group">
                            <h:inputHidden binding="#{selectEmployeeController.initModifierHidden}"/>
                            <p:autoComplete id="creator_empId" 
                                            value="#{selectEmployeeController.selectedUser}"
                                            var="empId"
                                            itemLabel="#{empId}"
                                            itemValue="#{empId}"
                                            completeMethod="#{selectEmployeeController.completeMethod}"
                                            maxResults="9"
                                            >
                                <p:column>
                                    #{empId} - #{selectEmployeeController.getUserCname(empId)}
                                </p:column>
                                <p:ajax event="itemSelect" 
                                        listener="#{selectEmployeeController.handleSelect}"
                                        update="creator_empId creator_cname"
                                        />
                            </p:autoComplete>
                            <p:spacer width="5px"/>
                            <p:commandButton action="#{selectEmployeeController.init}"
                                             immediate="true"
                                             oncomplete="PF('selectEmployeeDialog').show();"
                                             update="SED_selects employeeListGroup"
                                             value="..."/>
                            <h:outputLabel id="creator_cname" value="#{selectEmployeeController.cname}"/>
                            <h:inputHidden binding="#{selectEmployeeController.initUserBySessionUserHidden}"/>
                        </h:panelGroup>
                        <h:outputLabel value="#{msg['remit.label.remitNumber']}:" 
                                       for="remitNumber"/>
                        <p:inputText id="remitNumber" 
                                     value="#{advancePaymentController.remitNumber}"
                                     styleClass="ui-inputfield ui-state-default"/>
                    </h:panelGrid>
                    <h:panelGrid columns="1" width="100%">
                        <h:panelGroup>
                            <p:commandButton ajax="false"
                                             action="#{advancePaymentController.query}" 
                                             value="#{msg['button.search']}"
                                             icon="ui-icon-search">
                            </p:commandButton>
                            <p:spacer width="5px"/>
                            <p:commandButton value="#{msg['button.add']}"
                                             action="#{advancePaymentController.createOrEditSetup(null)}"
                                             icon="ui-icon-plus"/>
                        </h:panelGroup>                        
                    </h:panelGrid>                    
                </p:fieldset>
                <p:fieldset id="searchResult" legend="#{msg['search.result']}:">
                    <h:panelGroup id="dataTableGroup">
                        <p:dataTable var="item" 
                                     value="#{advancePaymentController.advancePaymentVOs}">
                            <p:column>
                                <f:facet name="header">
                                    <p:selectBooleanCheckbox value="#{advancePaymentController.selectAll}">
                                        <p:ajax event="change" 
                                                listener="#{advancePaymentController.selectAllChange}" 
                                                update ="dataTableGroup"/>
                                    </p:selectBooleanCheckbox>
                                </f:facet>
                                <p:selectBooleanCheckbox value="#{item.selected}" rendered="#{item.selectable}"/>
                            </p:column>
                            <p:column headerText="#{msg['remit.label.remitNumber']}">
                                <h:outputText value="#{item.advancePayment.arRemitMaster.id}" rendered="#{item.selectable}"/>
                            </p:column>
                            <p:column headerText="#{msg['customer.name']}" 
                                      style="text-align:left;">
                                <h:outputText value="#{item.advancePayment.customer.displayIdentifier}" rendered="#{item.selectable}"/>
                            </p:column>
                            <p:column headerText="#{msg['advancepayment.label.amount']}" 
                                      style="text-align: right;">
                                <h:outputText value="#{item.advancePayment.amount}" rendered="#{item.selectable}">
                                    <f:convertNumber pattern="###,###,###,###"/>
                                </h:outputText>
                                <h:outputText value="0" rendered="#{item.checkMaster ne null}"/>
                            </p:column>
                            <p:column headerText="#{msg['check.number']}">
                                <h:outputText value="#{item.checkMaster.checkNumber}" rendered="#{not item.selectable}"/>
                            </p:column>
                            <p:column headerText="#{msg['check.duedate']}">
                                <h:outputText value="#{item.checkMaster.dueDate}" rendered="#{not item.selectable}">
                                    <f:convertDateTime pattern="yyyy/MM/dd"/>
                                </h:outputText>
                            </p:column>
<!--                            <p:column headerText="#{msg['check.bank.name']}" style="text-align: left;">
                                <h:outputText value="#{item.checkMaster.billingBank.name}" rendered="#{not item.selectable}"/>
                            </p:column>
                            <p:column headerText="#{msg['check.billing.account']}">
                                <h:outputText value="#{item.checkMaster.billingBank.code}" rendered="#{not item.selectable}"/>
                            </p:column>-->
                            <p:column headerText="#{msg['advancepayment.label.checktotalamount']}" 
                                      style="text-align: right;">
                                <h:outputText value="#{item.checkMaster.amount}" rendered="#{not item.selectable}">
                                    <f:convertNumber pattern="###,###,###,###"/>
                                </h:outputText>
                                <h:outputText value="0" rendered="#{item.selectable}"/>
                            </p:column>
                            <p:column headerText="#{msg['common.label.creator.or.modifier']}">
                                <h:outputText value="#{item.advancePayment.modifier.displayIdentifier}" rendered="#{item.selectable}"/>
                                <h:outputText value="#{item.checkMaster.modifier.displayIdentifier}" rendered="#{not item.selectable}"/>
                            </p:column>
                            <p:column headerText="#{msg['fiinterface.label.status']}">
                                <h:graphicImage library="images"
                                                name="#{fiInterfaceController.getDisplayIcon(item.fiInterface)}"
                                                title="#{fiInterfaceController.getDisplayIdentifier(item.fiInterface)}"
                                                rendered="#{item.fiInterface ne null}"/>
                            </p:column>
                            <p:column headerText="#{msg['column.action']}" style="white-space: nowrap">
                                <p:commandButton ajax="false" 
                                                 action="#{advancePaymentController.createOrEditSetup(item.advancePayment.toString())}"
                                                 icon="ui-icon-pencil"
                                                 title="#{msg['button.edit']}"
                                                 rendered="#{item.selectable}"/>
                                <p:spacer width="5px"/>
                                <p:commandButton action="#{advancePaymentController.setAdvancePaymentVOToDelete(item)}"
                                                 oncomplete="PF('confirmRemoveDialog').show();"
                                                 icon="ui-icon-trash"
                                                 title="#{msg['button.delete']}"
                                                 rendered="#{item.selectable}"/>
                            </p:column>
                        </p:dataTable>
                    </h:panelGroup>
                    <p/>
                    <p:commandButton value="#{msg['button.upload']}"
                                     action="#{fiInterfaceController.prepareUpload(advancePaymentController.advancePaymentVOs)}"
                                     oncomplete="fiInterfaceDialog_showComplete(xhr, status, args);"
                                     update="messages growl fiInterfaceDialog dataTableGroup"
                                     icon="ui-icon-arrowthick-1-n"/>
                </p:fieldset>
            </p:panel>    
            <p:confirmDialog style="vertical-align: middle" 
                             header="#{msg['advancepayment.title.removeadvancepayment']}" 
                             message="#{msg['advancepayment.confirm.removeadvancepayment']}" 
                             widgetVar="confirmRemoveDialog">
                <p:spacer width="45px" height="1px"/>
                <p:commandButton value="#{msg['button.ok']}"
                                 oncomplete="PF('confirmRemoveDialog').hide();" 
                                 action="#{advancePaymentController.remove}"
                                 update="dataTableGroup messages growl"/>  
                <p:spacer width="5px"/>
                <p:commandButton value="#{msg['button.cancel']}" onclick="PF('confirmRemoveDialog').hide();" type="button" immediate="true"/>
            </p:confirmDialog>
        </h:form>
        <ui:include src="../jsff/selectEmployeeDialog.xhtml">
            <ui:param name="empidId" value=":creator_empId"/>
            <ui:param name="empnameId" value=":creator_cname"/>
        </ui:include>
        <ui:include src="../jsff/viewFiInterfaceDialog.xhtml">
            <ui:param name="sourceList" value="dataTableGroup"/>
        </ui:include>
    </ui:define>    
</ui:composition>