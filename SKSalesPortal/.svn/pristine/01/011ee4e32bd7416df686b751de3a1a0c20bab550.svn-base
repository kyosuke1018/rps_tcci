/*
*
*/
body {
    font-size: 12px;
    line-height: 1.5em;
}
table {
    font-size: 12px;
}
.page {
    margin: 0 auto;
    width: 950px;
}
.header {
    margin: 0 0 0 0;
    width: 100%
}
.content {
    width: 100%
}

.footer {
    background-color: #FFFFFF;
    clear: left;
    color: #82786F;
    font-size: 11px;
    padding: 10px 0;
    text-align: center;
    width: 100%;
}

.footer a {
    color: #82786F;
    font-family: Arial,Helvetica,sans-serif;
    font-size: 11px;
    text-decoration: none;
}

a:link {
    color: blue;
    text-decoration: none;
}
a:visited{
    color: blue;
    text-decoration: none;
}
a:hover {
    color: blue;
    text-decoration: underline;
}

.label3b {
    color: #82786F;
    font-family: Arial;
    font-size: 12px;
    font-weight: bold;
}
.systemname {
    color: #82786F;
    font-family: Arial,Helvetica,sans-serif;
    font-size: 28px;
    font-weight: normal;
    line-height: normal;
    margin: 10px 220px 0px 0px;
    padding-top: 2px;
}
/* theme */
.ui-state-default a,.ui-state-default a:link, .ui-state-default a:visited {
    color: #8D8378 !important;
    text-decoration: none;
}

.ui-widget .ui-widget {
    font-size: 12px;
}
.ui-state-default {
    font-weight: normal !important;
}
.ui-panel{
    width: 100%
}

.ui-datatable-header {
    text-align: left !important;
}

.ui-fieldset .ui-fieldset-legend {
    font-size: 1.1em;
    padding: 0.5em 1em;
    border: none;
    background: inherit;
}

label.required
{
    background-image:url("#{resource['images:required_field.png']}");
    background-position:right center;
    background-repeat:no-repeat;
    padding-right:15px;
}

img {
    border: none;
}

a img {
    vertical-align: middle;
    padding-right: 2px;
}

img.button
{
    cursor: pointer;
    vertical-align: bottom;
}

.ui-datatable-data tr td {
    text-align: center
}

.rowstyle {
    font-size: 11px;
}

.ui-datatable-subtable-header{
    text-align: left !important;
}

.ui-growl {
    position: absolute;
    left: 512px;
}

.row_error {
    background-color: #FFBABA !important;
    background-image: none !important;
    color: red !important;
}

.gift-row{
    background-color:#FFBABA !important;
    background-image: none !important;
}

td .ui-selectonemenu {
    display: block;
}
.hideBorder {
    border: 0px !important;
    border-color: white !important;
    text-align: left;
}

.ui-datatable {
    display: table;
}

.ui-datatable table {
    table-layout: auto !important;
}
