<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                template="../templates/generalPageTemplate.xhtml">
    <ui:define name="title">
        <h:outputText value="#{msg['remit.title.confirmRemit']}"/>
        <h:outputText value=" (#{flash.skArRemitMaster.id})" 
                      rendered="#{flash.skArRemitMaster ne null}"/>
    </ui:define>    
    <ui:define name="content">
        <p:panel>
            <f:facet name="header">
                <h:outputText value="#{msg['remit.title.confirmRemit']}"    />
                <h:outputText value=" (#{flash.skArRemitMaster.id})" rendered="#{flash.skArRemitMaster ne null}"/>
            </f:facet>
            <h:form prependId="false">
                <ui:include src="../jsff/editPaymentDetail.xhtml">
                    <ui:param name="includeFrom" value="confirmRemit"/>
                </ui:include>    
                <p />               
                <p:commandButton value="#{msg['remit.button.confirm']}"
                                 action="#{editPaymentDetailController.confirm}"
                                 rendered="#{not flash.viewOnly}"
                                 disabled="#{!remitQueryController.canConfirm(editPaymentDetailController.skArRemitMaster)}"
                                 ajax="false"
                                 icon="ui-icon-check"/>
                <p:commandButton ajax="false"
                                 action="#{advancePaymentController.createOrEditSetup(editPaymentDetailController.skArRemitMaster.toString())}"
                                 rendered="#{remitQueryController.reviewable and not flash.viewOnly}"
                                 disabled="#{!remitQueryController.canTransfer(editPaymentDetailController.skArRemitMaster)}"
                                 icon="ui-icon-triangle-1-e"
                                 value="#{msg['remit.button.transfer']}">
                    <f:setPropertyActionListener target="#{flash.skArRemitMaster}" value="#{editPaymentDetailController.skArRemitMaster}"/>
                </p:commandButton>
                <p:spacer width="5px"/>
                <p:commandButton value="#{flash.viewOnly ? msg['button.close'] : msg['button.cancel']}"
                                 ajax="false"
                                 immediate="true"
                                 action="#{editPaymentDetailController.getReturnPage_cancelRemit}"/>                   
            </h:form>
        </p:panel>
        <ui:include src="../sales/selectOrderNumberDlg.xhtml"/>
        <ui:include src="../jsff/ajaxStatusDlg.xhtml"/>
        <ui:include src="../jsff/viewAdvanceReceiptsDialog.xhtml"/>
        <ui:include src="../jsff/viewCheckDialog.xhtml"/>
    </ui:define>
</ui:composition>

