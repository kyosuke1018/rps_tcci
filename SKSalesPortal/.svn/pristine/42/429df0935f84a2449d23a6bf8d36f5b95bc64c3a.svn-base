<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                template="../templates/generalPageTemplate.xhtml">
    <ui:define name="title">
        #{msg['menu.check.maintenance']}
    </ui:define>    
    <ui:define name="content">
        <h:form prependId="false">
            <f:metadata>
                <f:viewParam name="action" value="#{checkMasterMaintenanceController.action}"/>
            </f:metadata>        
            <p:panel header="#{msg['menu.check.query']}">
                <p:fieldset legend="#{msg['search.criteria']}:">
                    <h:panelGrid columns="2" width="80%">
                        <h:panelGroup>                            
                            <h:outputLabel for="salesGroup" value="#{msg['sales.group']}:" style="margin-right: 10px" styleClass="required"/>
                            <h:selectOneMenu value="#{queryCriteriaController.filter.sales}" converter="skSalesMemberConverter"
                                             disabled="#{!queryCriteriaController.salesSelectable}" id="salesGroup" style="vertical-align:bottom" >
                                <f:selectItems value="#{queryCriteriaController.salesList}" var="sales" 
                                               itemLabel="#{sales.displayIdentifier}" itemValue="#{sales}"/>  
                            </h:selectOneMenu>
                        </h:panelGroup>
                        <h:panelGroup>
                            <ui:include src="../jsff/selectSalesAndCheckNumber.xhtml"/>
                        </h:panelGroup>
                    </h:panelGrid>
                    <h:panelGrid columns="1" width="100%">
                        <h:inputHidden binding="#{queryCriteriaController.initSalesAndCheckNumberHidden}"/>
                        <h:panelGroup>
                            <p:commandButton ajax="false"
                                             action="#{checkMasterMaintenanceController.doSearchArRemitItemAction}" 
                                             value="#{msg['button.search']}"
                                             icon="ui-icon-search"/>
                        </h:panelGroup>                        
                    </h:panelGrid>                    
                </p:fieldset>
                <p:fieldset id="searchResult" legend="#{msg['search.result']}:">
                    <p:dataTable var="row" value="#{checkMasterMaintenanceController.checkMasterList}">
                        <p:column headerText="#{msg['check.number']}" style="text-align: left;">
                            <h:outputText value="#{row.checkNumber}"/>
                        </p:column>
                        <p:column headerText="#{msg['remit.label.customer']}" style="text-align: left;">
                            <h:outputText value="#{row.customer.displayIdentifier}"/>
                        </p:column>
                        <p:column headerText="#{msg['check.duedate']}">
                            <h:outputText value="#{row.dueDate}">
                                <f:convertDateTime pattern="yyyy/MM/dd"/>
                            </h:outputText>
                        </p:column>
                        <p:column headerText="#{msg['check.bank.name']}">
                            <h:outputText value="#{row.billingBank.name}" style="text-align: left;"/>
                        </p:column>
                        <p:column headerText="#{msg['check.billing.account']}">
                            <h:outputText value="#{row.billingBank.code}" style="text-align: left;"/>
                        </p:column>
                        <p:column headerText="#{msg['check.billing.amount']}" style="text-align: right;">
                            <h:outputText value="#{row.amount}">
                                <f:convertNumber pattern="###,###,###"/>
                            </h:outputText>
                        </p:column>
                        <p:column headerText="#{msg['common.label.modifier']}">
                            <h:outputText value="#{row.modifier.displayIdentifier}"/>
                        </p:column>
                        <p:column headerText="#{msg['column.action']}">
                            <p:commandButton ajax="false" 
                                             action="#{checkMasterMaintenanceController.editSetup}" 
                                             icon="ui-icon-pencil"
                                             title="#{msg['button.edit']}"
                                             disabled="#{not checkMasterMaintenanceController.canEdit(row.checkNumber)}">
                                <f:setPropertyActionListener target="#{flash.previousPage}" value="check_query.xhtml"/>
                                <f:setPropertyActionListener target="#{flash.number}" value="#{row.checkNumber}"/>
                                <f:setPropertyActionListener target="#{flash.amount}" value="#{row.amount}"/>
                            </p:commandButton>
                        </p:column>
                    </p:dataTable>
                </p:fieldset>
            </p:panel>    
        </h:form>
    </ui:define>    
</ui:composition>