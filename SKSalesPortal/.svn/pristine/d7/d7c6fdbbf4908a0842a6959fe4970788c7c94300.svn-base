<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                template="../templates/generalPageTemplate.xhtml">
    <ui:define name="title">
        #{msg['menu.sales.remitquery']}
    </ui:define>    
    <ui:define name="content">
        <h:form prependId="false">
            <p:panel header="#{msg['menu.sales.remitquery']}">
                <p:fieldset legend="#{msg['common.fieldset.criteria']}:">
                    <ui:include src="selectSalesAndRemitTimestamp.xhtml"/>
                    <h:panelGrid columns="1" width="100%">
                        <h:panelGroup>
                            <p:commandButton value="#{msg['button.search']}" 
                                             icon="ui-icon-search"
                                             action="#{remitQueryController.doSearchRemitMasterAction}" 
                                             update="searchResult,reportBtn" />
                            <p:spacer width="10px"/>
                            <p:commandButton value="#{msg['button.add']}" 
                                             ajax="false"
                                             icon="ui-icon-plus"
                                             action="remit_maintenance_step1">
                                <f:setPropertyActionListener target="#{flash.from}" value="query"/>
                            </p:commandButton>
                            <p:spacer width="10px"/>                            
                            <p:commandButton icon="ui-icon-disk" 
                                             value="#{msg['button.pdf']}"
                                             ajax="false"
                                             action="#{remitQueryExportToPDFController.exportReportPDF}"
                                             id="reportBtn"
                                             style="vertical-align:bottom; display:#{remitQueryController.masterDataModel ne null ? 'inline' : 'none'}"/>
                        </h:panelGroup>                        
                    </h:panelGrid>                    
                </p:fieldset>
                <p:fieldset id="searchResult" legend="#{msg['common.fieldset.result']}:">
                    <ui:include src="../jsff/remitQueryResult.xhtml"/>
                </p:fieldset>
            </p:panel>    
        </h:form>
    </ui:define>    
</ui:composition>